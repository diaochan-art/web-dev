  <h2>Posting Terbaru</h2>
  <ul>
    {% for post in collections.post | reverse %}
      <li style="margin:12px 0">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        <div style="color:#666;font-size:.9rem">{{ post.date | readableDate }}</div>
      </li>
    {% endfor %}
  </ul>
</section>

